@import url('https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;1,300;1,400;1,500;1,600;1,700&display=swap');
  
* {
    font-family: 'Open Sans', sans-serif;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}    


.navbar {
    width: 275px;
    height: 617px;
    padding: 0 12px; 
    position: fixed; 
} 

/* TWITTER LOGO */
.navbar > .logo > a > img{
    width: 52px;
    height: 52px;
    display: flex;
    justify-content: center;
    align-self: stretch;
    border: 0 solid black;
    cursor: pointer;
}  

/* NAVBAR CONTENT */
.navbar > .navbar-content {
    display: flex;
    flex-direction: column; 
    justify-content: center; 
    align-items: center; 
    width: 251px;
    height: 402px;
    margin-top: 2px;
    margin-bottom: 4px;
    font-size: 20px;    
    font-weight: 400;  
    color: #0f1419; 
    cursor: pointer;  
}    

.navbar > .navbar-content > .navbar-content-items {
    display: flex; 
    align-items: center; 
    padding: 12px;  
}

.navbar > .navbar-content > .navbar-content-items:hover {
    background-color: #cccccc;
    border-radius: 25px;  
} 
  

/* TWEET BUTTON */
.navbar > .tweet-button > .blue-tweet-button {
    display: flex;   
    justify-content: center;  
    align-items: center; 
    width: 210px; 
    height: 52px;  
    padding: 0 32px;   
    border: none; 
    border-radius: 25px;  
    background-color: rgb(29 155 240); 
    color: white;
    font-size: 15px; 
    font-weight: 700; 
    cursor: pointer; 
}    

/* PROFILE */

.navbar > .profile {
    display: flex; 
    justify-content: space-between; 
    align-items: center; 
    width: 251px;
    height: 64px;
    margin-top: 12px;  
    cursor: pointer; 
} 

.navbar > .profile:hover {
    background-color: #cccccc;
    border-radius: 25px; 
} 

.navbar > .profile > .profile-image > img {
    width: 40px;
    height: 40px; 
    border-radius: 50%; 
    margin-right: 10px; 
} 
   
/* END OF NAVBAR CODE */

/* MAINBODY CODE */

/* MAINBODY-HOME */ 
main {
    margin: 5px auto; 
    width: 600px;
    height: 2500px;    
    cursor: pointer ; 
}       
  
main > .home {
    display: flex;  
    justify-content: space-between; 
    width: 598px;
    height: 53px; 
    margin-top: 10px; 
    font-size: 20px;  
    font-weight: 700; 
} 
 
/* MAINBODY-HOME-TWEETS */

main > .home-tweets {
    display: flex; 
    justify-content: space-between; 
} 

main > .home-tweets > span > img {
    width: 48px;
    height: 48px;  
    border-radius: 50%;
} 

main > .home-tweets > input {
    width: calc(100% - 52px); 
    border: none; 
    padding: 12px 0px;
    font-size: 20px;
    font-weight: 400;
    cursor: text;  
} 
 
/* MAINBODY HOME-ICONS */
main > .home-icons {
    display: flex; 
    justify-content: space-between; 
    width: 506px;
    height: 48px;
} 

main > .home-icons > .home-icons-links {
    display: flex; 
    flex-direction: row;   
    width: 208px;
    height: 36px; 
    margin-top: 12px;   
    padding: 3px; 
    color: rgb(29, 155, 240);
    font-weight: 700;
    font-size: 15px; 
}       

.tooltip {
    position: relative; 
} 

.tooltip-text {
    position: absolute; 
    left: 0;   
    top: 100%;    
    font-size: 10px;  
    background-color:  #323232;  
    color: white; 
    opacity: 0.8; 
    padding: 5px;
    white-space: nowrap; 
    visibility: hidden; 
    border-radius: 2px; 
}  

.tooltip:hover .tooltip-text {
    visibility: visible;   
}  
 
/* HOME TWEET BUTTON */
main > .home-icons > button {
    width: 88px;
    height: 36px;
    display: flex;
    justify-content: center; 
    align-items: center;
    padding: 0px 16px; 
    margin-top: 12px; 
    border: 1px solid rgba(0, 0, 0, 0);  
    border-radius: 25px; 
    background-color: rgb(29, 155, 240);
    color: rgb(255, 255, 255); 
    opacity: 0.5;
    font-size: 15px;
    font-size: 700;
}

main > .show-tweets {
    width: 566px;
    height: 48px; 
} 

main > .show-tweets > button { 
    width: 100%;
    height: 20px; 
    border: none; 
    background-color: white;
    color: rgb(29, 155, 240); 
    font-size: 15px; 
    font-weight: 400;
}

 /* END OF HOME TWEETS, ICONS & BUTTON*/

 /* HOME-CONTENT (READ AVAILABLE TWEETS) */

 main > .home-content {
     width: 534px;
     height: 170px; 
     padding: 0px 16px; 
     margin: 10px 0px;
     font-size: 15px; 
 }     

 main > .home-content > .home-content-profile {
     width: 534px;
     height: 48px; 
     display: flex; 
     justify-content: space-between; 
 }      
  
 main > .home-content> .home-content-profile > .profile-image > img { 
    box-shadow: rgba(0, 0, 0, 0.03) 0px 0px 2px inset;
    width: 48px;
    height: 48px;  
    border-radius: 50%; 
 }    
   
 main > .home-content > .home-content-profile > .profile-username {
     display: flex;
     flex-direction: column; 
 } 

 main > .home-content > .home-content-tweet { 
     width: 534px;
     height: 20px; 
     margin-top: 5px;  
     font-size: 15px;
 }   

 main > .home-content > .home-content-icons {
     width: 534px;
     height: 32px; 
     display: flex;
     justify-content: space-between; 
     margin-top: 10px;
 } 

 /* END OF HOME-CONTENT CODE
 END OF MAINBODY CODE */

 /* RIGHT-SIDEBAR CODE */
   

